<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_blog_background"
        android:orientation="vertical"
        android:padding="4dp">

        <micro.com.microblog.widget.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/sns_qqfriends_icon"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/iv_icon"
            android:text="title"
            android:textColor="@color/app_text_black_color"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_toRightOf="@id/iv_icon"
            android:textSize="13sp"/>

    </RelativeLayout>

    <micro.com.microblog.widget.LabelView
        android:id="@+id/label_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top|right"
        app:lv_gravity="TOP_RIGHT"
        app:lv_text="已收藏"/>


</android.support.v7.widget.CardView>