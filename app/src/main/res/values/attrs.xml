<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="PublicHeadLayout">
        <attr name="tv_title" format="string"/>
        <attr name="tv_right_msg" format="string"/>
    </declare-styleable>


    <declare-styleable name="ShareItem">
        <attr name="item_icon" format="dimension"/>
        <attr name="desc" format="string"/>
    </declare-styleable>

    <!-- 显示订单的状态-->
    <declare-styleable name="LabelView">
        <!-- 设置文字内容 -->
        <attr name="lv_text" format="string"/>
        <!-- 设置文字颜色,默认#ffffff -->
        <attr name="lv_text_color" format="color"/>
        <!-- 设置文字大小,默认11sp -->
        <attr name="lv_text_size" format="dimension"/>
        <!-- 设置文字是否支持加粗,默认true -->
        <attr name="lv_text_bold" format="boolean"/>
        <!-- 设置文字是否支持全部大写,默认true-->
        <attr name="lv_text_all_caps" format="boolean"/>
        <!-- 设置背景颜色,默认"#FF4081"-->
        <attr name="lv_background_color" format="color"/>
        <!-- 设置LabelView所在矩形最小宽高,默认mFillTriangle?35dp:50dp-->
        <attr name="lv_min_size" format="dimension"/>
        <!-- 设置文字上下padding,默认3.5dp,mFillTriangle为true时无效-->
        <attr name="lv_padding" format="dimension"/>
        <!-- 设置LabelView方向 -->
        <attr name="lv_gravity" format="enum">
            <enum name="TOP_LEFT" value="51"/>
            <enum name="TOP_RIGHT" value="53"/>
            <enum name="BOTTOM_LEFT" value="83"/>
            <enum name="BOTTOM_RIGHT" value="85"/>
        </attr>
        <!-- 设置是否填充三角区域,默认false -->
        <attr name="lv_fill_triangle" format="boolean"/>
        <!-- 设置是否浮嵌显示大小 -->
        <attr name="lv_fill_size" format="integer"/>
    </declare-styleable>


    <declare-styleable name="SettingItem">
        <attr name="iv_icon" format="dimension"/>
        <attr name="msg" format="string"/>
    </declare-styleable>


    <!--昼夜模式主色调-->
    <attr name="appBackground" format="color|reference" />
    <attr name="dayNightBackground" format="color|reference"/>
    <attr name="dayNightOneTextColor" format="color|reference"/>
    <attr name="dayNightTwoTextColor" format="color|reference"/>
    <attr name="dayNightThreeTextColor" format="color|reference"/>
    <attr name="dayNightBackgroundDrawable" format="color|reference"/>

    <declare-styleable name="DayNightMode">
        <attr name="appBackgroundAttr" format="string|reference" />   <!--app背景属性-->
        <attr name="dayNightBackgroundAttr" format="string|reference"/><!--切换背景属性-->
        <attr name="dayNightOneTextColorAttr" format="string|reference"/><!--切换一级字体颜色属性-->
        <attr name="dayNightTwoTextColorAttr" format="string|reference"/><!--切换二级字体颜色属性-->
        <attr name="dayNightThreeTextColorAttr" format="string|reference"/><!--切换三级字体颜色属性-->
        <attr name="dayNightBackgroundDrawableAttr" format="string|reference"/><!--切换背景图片属性-->
    </declare-styleable>


</resources>